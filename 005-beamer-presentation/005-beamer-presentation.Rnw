m <- ggplot(fev, aes(x = fev)) + 
geom_histogram(colour = "black", 
fill = "white", breaks=seq(0,6,0.2))
@
\pause
<<eval=FALSE>>=
# plot FEV by gender
m + facet_grid(~gender)
